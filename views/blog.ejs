<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>

      <title>Blog</title>
</head>

<body>
   <%- include('./partials/nav') %>
      <div class="container mt-4">
         <h1>
            <%= blog.title %>
         </h1>
         <img src="<%= blog.coverImgUrl %>" width="600px" alt="">
         <pre class="mt-3"><%= blog.body %></pre>
      </div>
      <div class="container mt-4">
         <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" alt="">
         <%= blog.createdBy.fullName %>
      </div>

      <div class="container mt-4">
         <% comments.forEach(e => { %>
            <img src="<%= e.createdBy.profileImageUrl %>" width="50px" alt="">
         <%= e.createdBy.fullName %>
         <pre><%= e.content %></pre>
         <% }) %>
      </div>


      <div class="container mt-4">
         <h1>Comments (<%= comments.length %>)</h1>
         <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
               <div class="mb-3">

                  <input type="text" class="form-control" id="content" name="content" aria-describedby="content"
                     placeholder="Enter your comment">
               </div>
               <button type="submit" class="btn btn-primary">Add</button>
            </form>

            <% } %>
      </div>

      <%- include('./partials/script') %>
</body>

</html>